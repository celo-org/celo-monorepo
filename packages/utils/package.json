    "lodash": "^4.17.14",
    "web3-utils": "1.0.0-beta.37"
  },
  "devDependencies": {
    "@celo/typescript": "0.0.1",
    "@types/country-data": "^0.0.0",
    "@types/elliptic": "^6.4.9",
    "@types/ethereumjs-util": "^5.2.0",
    "@types/google-libphonenumber": "^7.4.17",
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.136",
