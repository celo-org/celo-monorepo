    "ethereumjs-wallet": "^0.6.3",
    "form-data": "^3.0.0",
    "fs-extra": "^5.0.0",
    "ganache": "npm:@celo/ganache@7.8.0-unofficial.0",
    "glob-fs": "^0.1.7",
    "graphql": "^14.1.1",
    "j6": "^1.0.2",
    "lodash": "^4.17.21",
    "mathjs": "^5.0.4",
    "minimist": "^1.2.0",
    "node-fetch": "^2.6.9",
    "openzeppelin-solidity": "^2.5.0",
    "prompts": "^2.0.1",
    "solhint": "^4.5.4",
    "semver": "^7.5.4",
    "solidity-bytes-utils": "0.0.7",
    "truffle": "5.9.0",
    "truffle-security": "^1.7.3",
    "weak-map": "^1.0.5",
    "web3": "1.10.0",
    "web3-core": "1.10.0",
    "web3-core-helpers": "1.10.0",
    "web3-provider-engine": "^16.0.5",
    "web3-utils": "1.10.0",
    "truffle-plugin-verify": "^0.6.5"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.3",
    "@celo/dev-utils":"^0.0.3",
    "@celo/typechain-target-web3-v1-celo": "^1.0.0",
    "@celo/typescript": "0.0.2",
    "@jest/globals": "^29.5.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.1.3",
    "@types/chai-subset": "1.3.5",
    "@types/jest": "^29.1.1",
    "@types/lodash": "^4.14.199",
    "@types/mathjs": "^4.4.1",
    "@types/mocha": "^7.0.2",
