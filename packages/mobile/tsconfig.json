{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es7", "esnext", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es2015",
    "strict": true
  },
  "include": ["src", "../contractkit/types"],
  "exclude": ["node_modules", "vendor", ".bundle"],
  "references": [{ "path": "../utils" }]
}
