{
  "extends": ["@celo/typescript/tslint.json"],
  "linterOptions": {
    "exclude": ["**/__mocks__/**", "**/lcov-report/**", "vendor", ".bundle"]
  },
  "rules": {
    "no-relative-imports": true,
    "max-classes-per-file": [true, 2],
    "no-global-arrow-functions": false,
    "react-hooks-nesting": "error"
  }
}
