{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "lib",
    "downlevelIteration": true
  },
  "exclude": ["lib/", "node_modules"],
  "include": ["src/*"]
}
