{
  "extends": "@celo/typescript/tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2017",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "composite": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "types/**/*", "index.d.ts"],
  "exclude": ["**/*.test.ts"]
}
